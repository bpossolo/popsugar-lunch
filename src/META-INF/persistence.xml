<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
		http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

    <persistence-unit name="transactions-required">
        <provider>org.datanucleus.api.jpa.PersistenceProviderImpl</provider>
        <class>com.popsugar.lunch.ui.client.User</class>
        <class>com.popsugar.lunch.ui.client.LunchGroup</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <validation-mode>NONE</validation-mode>
        <properties>
        	<property name="datanucleus.cache.level2.type" value="none"/>
            <property name="datanucleus.NontransactionalRead" value="true"/>
            <property name="datanucleus.NontransactionalWrite" value="false"/>
            <property name="datanucleus.ConnectionURL" value="appengine"/>
            <property name="datanucleus.RetainValues" value="true"/>
            <property name="datanucleus.DetachOnClose" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
