<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<g:HTMLPanel>
		<header>
			<img class="logo" src="/images/popsugar-logo-pink.png"/>
			<h1>Lunch for Four</h1>
		</header>
		<div class="content">
			<p class="intro">
			Sign up to meet new coworkers and add some variation to your lunch routine!
			</p>
			<div class="signupForm">
				<div class="field">
					<g:TextBox ui:field="name"/>
				</div>
				<div class="field">
					<g:TextBox ui:field="email"/>
				</div>
				<div class="field">
					<g:ListBox ui:field="location"/>
				</div>
				<g:Button ui:field="signup">Sign Me Up!</g:Button>
			</div>
			<g:Label styleName="validationError" ui:field="validationError" visible="false">
				We need your name, email and location!
			</g:Label>
			<g:Label styleName="successMsg" ui:field="successMsg" visible="false">
				Great! You&#39;ll receive an email every other week with a new lunch group!
			</g:Label>
			<div class="weekAndLegend">
				<g:Label styleName="week" ui:field="weekLabel"/>
				<div class="legend">
					* = Person responsible for coordinating lunch location/date
				</div>
			</div>
			
			<h3>San Francisco</h3>
			<g:FlowPanel ui:field="sfLunchGroupsContainer" styleName="currentLunchGroups"/>
			
			<h3>Los Angeles</h3>
			<g:FlowPanel ui:field="laLunchGroupsContainer" styleName="currentLunchGroups"/>
			
			<h3>New York</h3>
			<g:FlowPanel ui:field="nyLunchGroupsContainer" styleName="currentLunchGroups"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>